@using Microsoft.AspNetCore.Identity
@model RockTransactions.Models.ViewModels.HhDashVM
@inject UserManager<FPUser> UserManager
@inject RockTransactions.Services.IFPHouseHoldService HouseHoldService
@{
    ViewData["Title"] = "Dashboard";
    var user = await UserManager.GetUserAsync(User);
    var script = TempData["Script"];
}
<div class="row">
    <div class="col-md">
        <div class="row justify-content-between mt-3">
            <div class="col-md">
                <h1>Household dashboard</h1>
            </div>
            <div class="col-auto">
                <div class="row">
                    <div class="col-auto">
                        <form asp-controller="HouseHolds" asp-action="Leave">
                            <button type="submit" class="btn btn-outline-secondary">Leave household</button>
                        </form>
                    </div>
                    <div class="col-auto">
                        @if (User.IsInRole("Admin") || User.IsInRole("Head"))
                        {
                            <button class="btn btn-info" data-toggle="modal" data-target="#exampleModal">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user-plus"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="8.5" cy="7" r="4"></circle><line x1="20" y1="8" x2="20" y2="14"></line><line x1="23" y1="11" x2="17" y2="11"></line></svg>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md widget p-3">
                        <h3>Occupants of household</h3>
                        <table class="table table-responsive-md">
                            <thead>
                                <tr>
                                    <td>Name</td>
                                    <td>Email</td>
                                    <td>Role</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var occupant in Model.Occupants)
                                {
                                    <tr>
                                        <td>@occupant.FullName</td>
                                        <td>@occupant.Email</td>
                                        <td>
                                            @await HouseHoldService.GetRoleAsync(occupant)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Invite a member</h3>
            </div>
            <div class="modal-body">
                <form id="dashInviteForm" asp-controller="Invitations" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label name="HouseHoldId" class="control-label" hidden></label>
                        <input type="hidden" name="HouseHoldId" class="form-control" value="@user.HouseHoldId" />
                    </div>
                    <div class="form-group">
                        <label name="Created" class="control-label" hidden></label>
                        <input type="hidden" name="Created" class="form-control" value="@DateTime.Now" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Expires</label>
                        <input type="date" name="Expires" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">EmailTo</label>
                        <input name="EmailTo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label name="Subject" class="control-label">Subject</label>
                        <input name="Subject" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label name="Body" class="control-label">Body</label>
                        <textarea name="Body" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label name="Code" class="control-label" hidden></label>
                        <input type="hidden" name="Code" class="form-control" value="@Guid.NewGuid()" />
                    </div>
                    <div class="modal-footer">
                        <input id="hhDashInviteSubmit" type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        @Html.Raw(script)
    </script>
}