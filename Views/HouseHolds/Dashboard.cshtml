@using Microsoft.AspNetCore.Identity
@model RockTransactions.Models.ViewModels.HhDashVM
@inject UserManager<FPUser> UserManager
@inject RockTransactions.Services.IFPHouseHoldService HouseHoldService
@{
    ViewData["Title"] = "Dashboard";
    var user = await UserManager.GetUserAsync(User);
    var script = TempData["Script"];
}
<div class="row">
    <div class="col-md">
        <div class="row justify-content-between mt-3">
            <div class="col-md">
                <h1>Household dashboard</h1>
            </div>
            <div class="col-auto">
                <div class="row">
                    <div class="col-auto">
                        @if (User.IsInRole("Admin") || User.IsInRole("Head"))
                        {
                            <button class="btn btn-info" data-toggle="modal" data-target="#inviteModal">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user-plus"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="8.5" cy="7" r="4"></circle><line x1="20" y1="8" x2="20" y2="14"></line><line x1="23" y1="11" x2="17" y2="11"></line></svg>
                            </button>
                        }
                        <button class="btn btn-info" data-toggle="modal" data-target="#accountModal">
                            Add Account
                        </button>
                        <button class="btn btn-info" data-toggle="modal" data-target="#categoryModal">
                            Add Category
                        </button>
                        <button class="btn btn-info" data-toggle="modal" data-target="#itemModal">
                            Add Item
                        </button>
                    </div>
                    <div class="col-auto">
                        <form asp-controller="HouseHolds" asp-action="Leave">
                            <button type="submit" class="btn btn-outline-secondary">
                                Leave
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                <button class="btn btn-success btn-lg" data-toggle="modal" data-target="#transactionModal">
                    Record Transaction
                </button>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md widget p-3 ml-md-3 mr-md-3">
                <canvas id="breakdownPieChart"></canvas>
            </div>
            <div class="col-md widget p-3 mr-md-3">
                <canvas id="itemsBarChart"></canvas>
            </div>
        </div>
        <div class="row">
            <div class="col-md widget p-3 m-md-3">
                <h3>Recent Transactions</h3>
                <table class="table table-responsive-sm datatable">
                    <thead>
                        <tr>
                            <td>Member</td>
                            <td>Account</td>
                            <td>Type</td>
                            <td>Amount</td>
                            <td>Date</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model.Transactions)
                        {
                        <tr>
                            <td>@transaction.FPUser.FullName</td>
                            <td>@transaction.BankAccount.Name</td>
                            <td>@transaction.Type.ToString()</td>
                            <td>@transaction.Amount</td>
                            <td>@transaction.Created</td>
                            <td>
                                <a asp-controller="Transactions" asp-action="Details" asp-route-id="@transaction.Id">Details</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 widget p-3 ml-md-3 mr-md-3">
                <h3>Occupants of household</h3>
                <table class="table table-responsive-sm datatable">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Email</td>
                            <td>Role</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var occupant in Model.Occupants)
                        {
                            <tr>
                                <td>@occupant.FullName</td>
                                <td>@occupant.Email</td>
                                <td>
                                    @await HouseHoldService.GetRoleAsync(occupant)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md widget p-3 mr-md-3">
                <h3>Bank Accounts</h3>
                <table class="table table-responsive-sm datatable">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Type</td>
                            <td>Balance</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model.Accounts)
                        {
                            <tr>
                                <td>@account.Name</td>
                                <td>@account.Type</td>
                                <td>@account.CurrentBalance</td>
                                <td>
                                    <a asp-controller="BankAccounts" asp-action="Details" asp-route-id="@account.Id">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_InviteModalPartial", user)
@await Html.PartialAsync("_AccountModalPartial", user)
@await Html.PartialAsync("_CategoryModalPartial", user)
@await Html.PartialAsync("_ItemModalPartial")
@await Html.PartialAsync("_TransactionModalPartial")

@section scripts {
    <script>
        @Html.Raw(script)
        MakePieChart();
        MakeBarChart();
    </script>
}