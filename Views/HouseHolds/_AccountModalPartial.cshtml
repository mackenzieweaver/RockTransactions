@model FPUser
@using RockTransactions.Data.Enums
<div class="modal fade" id="accountModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Add an account</h3>
            </div>
            <div class="modal-body">
                <form asp-controller="BankAccounts" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="HouseHoldId" class="control-label" hidden></label>
                        <input type="hidden" name="HouseHoldId" class="form-control" value="@Model.HouseHoldId" />
                    </div>
                    <div class="form-group">
                        <label for="Name" class="control-label">Name</label>
                        <input name="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Type" class="control-label">Type</label>
                        <select name="Type" asp-items="Html.GetEnumSelectList<AccountType>()" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="StartingBalance" class="control-label">Starting balance</label>
                        <input name="StartingBalance" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="CurrentBalance" class="control-label" hidden>Current balance</label>
                        <input type="hidden" name="CurrentBalance" class="form-control" value="0"/>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>