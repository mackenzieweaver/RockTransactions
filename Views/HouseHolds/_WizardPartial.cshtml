@model FPUser
@using RockTransactions.Data.Enums
<div class="modal fade" id="wizardModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Set up your household</h3>
            </div>
            <div class="modal-body">
                <form id="accountSetup" asp-controller="HouseHolds" asp-action="SetUp" method="post">
                    <div class="form-group">
                        <label name="HouseHoldId" class="control-label" hidden></label>
                        <input type="hidden" name="houseHoldId" class="form-control" value="@Model.HouseHoldId" />
                    </div>
                    <div class="form-group">
                        <label name="Created" class="control-label" hidden></label>
                        <input type="hidden" name="date" class="form-control" value="@DateTime.Now" />
                    </div>

                    <div id="wizard">
                        <h3>Bank</h3>
                        <section>
                            <div class="form-group">
                                <label for="bank" class="control-label">Name</label>
                                <input name="bank" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="accountType" class="control-label">Type</label>
                                <select name="accountType" asp-items="Html.GetEnumSelectList<AccountType>()" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label for="startBalance" class="control-label">Balance</label>
                                <input name="startBalance" class="form-control" />
                            </div>
                        </section>
                        <h3>Category</h3>
                        <section>
                            <div class="form-group">
                                <label for="category" class="control-label">Name</label>
                                <input name="category" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="catDesc" class="control-label">Description</label>
                                <input name="catDesc" class="form-control" />
                            </div>
                        </section>
                        <h3>Item</h3>
                        <section>
                            <div class="form-group">
                                <label for="item" class="control-label">Name</label>
                                <input name="item" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="itemDesc" class="control-label">Description</label>
                                <input name="itemDesc" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="target" class="control-label">Budget</label>
                                <input name="target" class="form-control" />
                            </div>
                        </section>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
