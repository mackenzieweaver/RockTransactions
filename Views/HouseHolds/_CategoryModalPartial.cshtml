@model FPUser
<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Add a category</h3>
            </div>
            <div class="modal-body">
                <form asp-controller="Categories" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="HouseHoldId" class="control-label" hidden></label>
                        <input type="hidden" name="HouseHoldId" class="form-control" value="@Model.HouseHoldId" />
                    </div>
                    <div class="form-group">
                        <label for="Name" class="control-label">Name</label>
                        <input name="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Description" class="control-label">Description</label>
                        <input name="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>