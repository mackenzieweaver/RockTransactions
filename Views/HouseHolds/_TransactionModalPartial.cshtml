@using RockTransactions.Data.Enums
<div class="modal fade" id="transactionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Record transaction</h3>
            </div>
            <div class="modal-body">
                <form asp-controller="Transactions" asp-action="Create">
                    <div class="form-group">
                        <label for="CategoryItemId" class="control-label">Category</label>
                        <select name="CategoryItemId" class="form-control" asp-items="ViewBag.CategoryItemId"></select>
                    </div>
                    <div class="form-group">
                        <label for="BankAccountId" class="control-label">BankAccount</label>
                        <select name="BankAccountId" class="form-control" asp-items="ViewBag.BankAccountId"></select>
                    </div>
                    <div class="form-group">
                        <label for="Created" class="control-label" hidden></label>
                        <input type="hidden" name="Created" class="form-control" value="@DateTime.Now" />
                    </div>
                    <div class="form-group">
                        <label for="Type" class="control-label">Type</label>
                        <select name="Type" asp-items="Html.GetEnumSelectList<TransactionType>()" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="Memo" class="control-label">Memo</label>
                        <input name="Memo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Amount" class="control-label">Amount</label>
                        <input name="Amount" class="form-control" />
                    </div>
                    @*<div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                        </label>
                    </div>*@
                    <div class="form-group">
                        <input type="submit" value="Record" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>