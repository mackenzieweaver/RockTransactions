@model RockTransactions.Models.HouseHold

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-3">Create</h1>

<h4>HouseHold</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Greeting" class="control-label"></label>
                <input asp-for="Greeting" class="form-control" />
                <span asp-validation-for="Greeting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Established" class="control-label" hidden></label>
                <input type="hidden" asp-for="Established" class="form-control" value="@DateTime.Now"/>
                <span asp-validation-for="Established" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
