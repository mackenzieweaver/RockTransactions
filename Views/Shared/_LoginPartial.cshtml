@using Microsoft.AspNetCore.Identity
@inject SignInManager<FPUser> SignInManager
@inject UserManager<FPUser> UserManager
@inject RockTransactions.Services.IFPFileService FileService

@{
    var user = await UserManager.GetUserAsync(User);
    var avatar = FileService.ConvertByteArrayToFile(user.FileData, user.FileName.Split('.')[1]);
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="avatar avatar-lg">
            <img alt="avatar" src="@avatar" class="rounded-circle mt-1" style="height:50px;"/>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @user.FullName!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="mt-3 nav-link btn btn-link text-dark" style="line-height:1rem;">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
