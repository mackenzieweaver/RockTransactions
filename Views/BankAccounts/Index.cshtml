@model IEnumerable<RockTransactions.Models.BankAccount>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md mt-3">
        <h1>BankAccounts</h1>
        <p><a asp-action="Create" class="btn btn-outline-primary">New BankAccount</a></p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.HouseHold)
                    </th>
                    <th>
                        User
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartingBalance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrentBalance)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HouseHold.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FPUser.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartingBalance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CurrentBalance)
                        </td>
                        <td>
                            <a asp-controller="Transactions" asp-action="Transactions" asp-route-id="@item.Id">Transactions</a> |
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
