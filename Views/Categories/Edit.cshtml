@model RockTransactions.Models.Category
@using Microsoft.AspNetCore.Identity
@inject UserManager<FPUser> UserManager
@{
    ViewData["Title"] = "Edit";
    var user = await UserManager.GetUserAsync(User);
}

<h1>Edit</h1>
<h4>Category</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HouseHoldId" class="control-label" style="display:none;"></label>
                <input type="hidden" asp-for="HouseHoldId" class="form-control" value="@user.HouseHoldId" />
                <span asp-validation-for="HouseHoldId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
